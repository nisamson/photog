<!DOCTYPE html>
<html lang="en">


<!--suppress HtmlRequiredTitleElement -->
<head>
    <% include partials/head.ejs %>
</head>
<body class="px-0">
<div class="row">
    <div class="flex-fill">
        <header>
            <% include partials/header.ejs %>
        </header>
        <main>
            <div class="jumbotron">
                <div class="container">
                    <img class="img-fluid d-block mx-auto" src="https://static.nes.sh/images/<%= photo.hash %>.jpg"
                         alt="<%= photo.title %>" style="max-height: 60vh">
                    <hr>

                    <form name="edit" method="post" action="/edit/<%= photo._id %>">
                        <div class="form-group row">
                            <label for="title" class="col-sm-2 col-form-label">Title</label>
                            <div class="col-sm-10">
                                <input type="text" id="title" class="form-control" name="title" value="<%= photo.title %>">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="tags" class="col-form-label">Tags</label>
                            <textarea id="tags" name="tags" class="form-control" rows="10"><%= photo.tags.join('\n') %></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Submit</button>
                    </form>
                </div>
            </div>
        </main>

        <footer>
            <% include partials/footer.ejs %>
        </footer>

        <% include partials/body-footer.ejs %>
    </div>
</div>

</body>
</html>

