<!DOCTYPE html>
<html lang="en">
<!--suppress HtmlRequiredTitleElement -->
<head>
    <% include partials/head.ejs %>
</head>

<body class="px-0">
<div class="row">
    <div class="flex-fill">
        <header>
            <% include partials/header.ejs %>
        </header>
        <main>
            <div class="jumbotron">
                <div class="container">
                    <div class="text-danger">
                        <h1>Error Code <%= statusCode || 500 %> &mdash; <%= message %></h1>
                    </div>
                    <% if (error.stack) { %>
                        <div>
                            <h2>Stack Trace</h2>
                            <pre><%= error.stack %></pre>
                        </div>
                    <% } %>
                </div>
            </div>
        </main>


        <footer>
            <% include partials/footer.ejs %>
        </footer>

        <% include partials/body-footer.ejs %>
    </div>
</div>
</body>
</html>
